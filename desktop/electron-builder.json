{
  "appId": "Converti",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "mac": {
    "target": [
      "dmg"
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "assets/icons/icon.ico"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "assets/icons/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "extraResources": [
    {
      "from": "assets/bin/",
      "to": "assets/bin/",
      "filter": ["**/*"]
    }
  ]
}
